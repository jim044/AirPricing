<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xmlns:int="http://www.springframework.org/schema/integration"
	   xmlns:int-webflux="http://www.springframework.org/schema/integration/webflux"
	   xmlns:int-http="http://www.springframework.org/schema/integration/http"
	   xsi:schemaLocation="http://www.springframework.org/schema/integration http://www.springframework.org/schema/integration/spring-integration.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://www.springframework.org/schema/integration/webflux
        https://www.springframework.org/schema/integration/webflux/spring-integration-webflux.xsd
		http://www.springframework.org/schema/integration/http http://www.springframework.org/schema/integration/http/spring-integration-http.xsd">

	<int:channel id="searchAirportChannel"/>
	<int:channel id="errorChannelInvoiceWs" />
	<int:channel id="invoiceWsRequestChannel" />
	<int:channel id="invoiceWsResponseChannel" />

	<int-http:inbound-gateway
			id="webserviceGetInvoiceFile"
			request-channel="searchAirportChannel"
			reply-channel="invoiceWsResponseChannel"
			reply-timeout="30000"
			path="/api/searchAirport/{searchChar}"
			supported-methods="GET"
			error-channel="errorChannelInvoiceWs"
	>
		<int-http:header name="searchChar" expression="#pathVariables.searchChar"/>
	</int-http:inbound-gateway>

	<int:chain id="errorInvoiceWs" input-channel="errorChannelInvoiceWs" output-channel="invoiceWsResponseChannel">
		<int:transformer expression="'No reply produced for request'"></int:transformer>
		<int:header-enricher >
			<int:header name="http_statusCode" value="404"></int:header>
		</int:header-enricher>
	</int:chain>

	<int:chain input-channel="searchAirportChannel" output-channel="nullChannel">

		<int-webflux:outbound-gateway id="requestTokenAmadeus"
									  uri-variables-expression=""
									  web-client="amadeusWebClient"
									  url-expression="'${application.amadeus.base-path-v1}' + '${application.amadeus.endpoint-airport}' + '?subType=AIRPORT&amp;keyword=MUC&amp;page[limit]=10&amp;page[offset]=0&amp;sort=analytics.travelers.score&amp;view=FULL'"
									  http-method="GET"
									  charset="UTF-8"
									  expected-response-type="com.kode4you.airpricing.domain.response.airporrtSearch.AirportSearchResponse">
		</int-webflux:outbound-gateway>

		<int:transformer ref="transformerTest"/>
	</int:chain>
</beans>